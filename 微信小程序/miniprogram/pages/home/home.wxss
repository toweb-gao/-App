/* pages/home/home.wxss */
/*1:一部电影*/
.movie{
  display: flex;    /*弹性布局*/
  padding:10rpx;    /*内边距*/
  border-bottom:1rpx solid #ccc;/*底部边线*/
}
/*2:左侧图片 200 300*/
.movie-img{
  width:200rpx;    /*图片宽度和高度*/
  height:300rpx;
  margin-right:20rpx;/*与右侧文字间距*/
}
/*3:右侧电影简介*/
.movie-info{
  font-size:28rpx;   /*右侧文字大小 15:20*/
  line-height: 1.8;  /*垂直居中*/
}
/*4:标题*/
.movie-title{
  font-size:40rpx; /*标题中文字大小*/
  color:#666;
}
/*5:评分*/
.movie-score{
  color:#faaf00;
}
/*6:按钮 25*/
.movie-btn{
  height:60rpx;
  background:#e54847;
  color:#fff;
  font-size:26rpx;
}

/*添加省略号*/
.ellipsis{
  overflow: hidden;        /*溢出隐藏*/
  text-overflow: ellipsis; /*文字溢出加...*/
  white-space: nowrap;     /*不换行*/
}